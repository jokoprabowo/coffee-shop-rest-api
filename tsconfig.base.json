{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["services", "packages"],
}
